class Sides:
    
    def __init__(self, sides = ['3 pack nuggets', '6 pack nuggets', 'small fries', 'medium fries', 'large fries'],
                 drinks = ['375mL can of coke', '600mL bottle of water'],
                 sidePrice = [3, 5, 2, 3, 4],
                 drinkPrice = [2, 3]):
        self._sides = sides
        self._drinks = drinks
        self._sidePrice = sidePrice
        self._drinkPrice = drinkPrice
    
    @property
    def sides(self):
        return self._sides
    
    @property
    def drinks(self):
        return self._drinks
    
    @property
    def sidePrice(self):
        return self._sidePrice
    
    @property
    def drinkPrice(self):
        return self._drinkPrice
    
        
     
        
    